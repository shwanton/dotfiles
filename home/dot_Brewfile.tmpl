{{- $casks = concat $casks (list
  "qlcolorcode"
  "qlstephen"
  "qlvideo"
  "quicklook-json"
  "quicklookase"
  "suspicious-package"
)
-}}

{{- $apps := list
  "Keynote -> 409183694"
  "Numbers -> 409203825"
  "Pages -> 409201541"
-}}

{{ range ($taps | sortAlpha | uniq) -}}
tap "{{ . }}"
{{ end }}

{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end }}

{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end }}

{{ range ($apps | sortAlpha | uniq) -}}
{{- $app := split " -> " . -}}
mas "{{ $app._0 }}", id: {{ $app._1 }}
{{ end -}}

{{- end -}}
