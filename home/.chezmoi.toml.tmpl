{{- $email := "shwanton@gmail.com" -}}{{/* default email */}}
{{- $personal := false -}}{{/* true if this machine should have personal secrets */}}
{{- $work := false -}}{{/* true if this machine is a work machine */}}

{{/* work around unreliable hostname on darwin */}}
{{- $hostname := .chezmoi.hostname -}}
{{- if eq .chezmoi.os "darwin" -}}
{{-   $computerName := output "scutil" "--get" "ComputerName" | trim -}}
{{-   if eq $computerName "shwanton-m4mbp" -}}
{{-     $hostname = "shwanton-m4mbp" -}}
{{-   else if eq $computerName "shawndempsey-mac" -}}
{{-     $hostname = "shawndempsey-mac" -}}
{{-   else -}}
{{-     $hostname = $computerName -}}
{{-   end -}}
{{- end -}}

{{- if eq $hostname "shwanton-m4mbp" -}}
{{-   $personal = true -}}
{{-   $work = false -}}
{{- else if eq $hostname "shawndempsey-mac" -}}
{{-   $personal = false -}}
{{-   $work = true -}}
{{- end -}}

{{- if $work -}}
    {{- $email = "shawndempsey@meta.com" -}}
{{- end -}}

[data]
    email = {{ $email | quote }}
    hostname = {{ $hostname | quote }}
    personal = {{ $personal }}
    work = {{ $work }}

[edit]
    command = "vim"
